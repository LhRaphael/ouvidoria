generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  
}

model Usuario {
  id Int @id @default(autoincrement())

  nome String
  cpf String @unique
  email String @unique
  telefone String @unique
  nascimento DateTime
  endereco Endereco[]
  manifestacoes Manifestacao[]
  senhaHash String
}

model Endereco{
  id Int @id @default(autoincrement())

  pais String
  estado String
  cidade String

  usuarioId Int
  usuario Usuario @relation(fields: [usuarioId], references: [id])
}

model Instituicao{
  id Int @id @default(autoincrement())

  nome String  @unique
  cnpj String @unique
  sede String

  admins Admin[]
  manifestacoes Manifestacao[]
  resumos Resumo[]
}

model Admin{
  id Int @id @default(autoincrement())

  nome String
  email String @unique
  cpf String @unique
  senhaHash String
  cargo String

  instituicaoId Int
  instituicao Instituicao @relation(fields: [instituicaoId], references: [id])
}

model Manifestacao{
  id Int @id  @default(autoincrement())
  criado DateTime @default(now())

  usuarioId Int
  usuario Usuario  @relation(fields: [usuarioId], references: [id])

  instituicaoId Int
  instituicao Instituicao @relation(fields: [instituicaoId], references: [id])

  conteudo String
  tipo String

  links Links[]
}

model Links{
  id Int @id @default(autoincrement())

  link String @unique

  manifestacaoId Int
  manifestacao Manifestacao @relation(fields: [manifestacaoId], references: [id])
}

model Resumo{
  id Int @id @default(autoincrement())

  criacao DateTime
  conteudo String

  instituicaoId Int
  instituicao Instituicao @relation(fields: [instituicaoId], references: [id])

}